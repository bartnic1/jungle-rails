<section class="products-show">

  <header class="page-header">
    <h1><%= link_to @product.category.name, @product.category %> &raquo; <%= @product.name %></h1>
  </header>

  <article class="product-detail">

    <div class="row">

      <div class="col-sm-4">
        <%= image_tag @product.image.url, class: 'main-img' %>
      </div>

      <div class="col-sm-8">
        <dl class="dl-horizontal">
          <dt>Name</dt>
          <dd><%= @product.name %></dd>
          <dt>Description</dt>
          <dd><%= @product.description %></dd>
          <dt>Quantity</dt>
          <dd><%= @product.quantity %></dd>
          <dt>Price</dt>
          <dd><%= @product.price %></dd>
          <h3 class="product-title-shift">New Review</h3>
          <div class='product-title-shift'>
            <%= form_for :review, as: :post, url: product_reviews_path(@product) do |f| %>
            Description:
            <div>
              <%= f.text_area :description %><br />
            </div>
            Rating:
            <div>
              <%= f.select :rating, [0,1,2,3,4,5], include_blank: false %><br />
            </div>
            <br/>
              <%= f.submit "Submit" %>
            <% end %>
          </div>
          <h3 class="product-title-shift">Reviews</h3>
          <table class="table table-bordered product-title-shift">
          <thead>
            <tr>
              <th>User</th>
              <th>Feedback</th>
              <th>Rating</th>
            </tr>
          </thead>
          <tbody>
          <%= render @reviews %>
          </tbody>
          </table>
        </dl>
      </div>
    </div>

  </article>

</section>
